<view class="cu-bar search bg-white">
	<view class="search-form round">
		<text class="cuIcon-search"></text>
		<navigator class="response" hover-class='none' url='/pages/base/search/index'>
			<input type="text" placeholder="请输入商品名"></input>
		</navigator>
	</view>
</view>
<view class="VerticalBox">
	<scroll-view class="VerticalNav nav" scroll-y scroll-with-animation scroll-top="{{VerticalNavTop}}" style="height:calc(100vh - 100rpx)">
		<view class="cu-item {{index==TabCur?'text-red cur':''}}" wx:for="{{goodsCategory}}" wx:key bindtap='tabSelect'
		 data-id="{{index}}">
			{{item.name}}
		</view>
	</scroll-view>
	<scroll-view class="VerticalMain" scroll-y scroll-with-animation style="height:calc(100vh - 100rpx)" scroll-into-view="main-{{MainCur}}"
	 bindscroll="VerticalMain">
		<view class="padding-tb-xs padding-lr-sm" wx:for="{{goodsCategory}}" wx:key id="main-{{index}}">
			<view class='cu-bar solid-bottom bg-white'>
				<view class='action'>
					<text class="cuIcon-titles text-red"></text>{{item.name}}
				</view>
			</view>
			<view class="cu-bar bg-white solid-bottom">
				<view class="cate-list">
					<image wx:if="{{item.picUrl}}" class="img-banner" src="{{item.picUrl}}"></image>
					<view wx:if="{{item.id == '7d7f14372fe498928742c85c6ddd424e' && item.children.length>0 }}" wx:for="{{item.children}}" wx:for-item="item2" wx:key class="cate">
						<navigator hover-class='none' url='/pages/tuangou/goods-list/index?categoryId={{item.id}}&title={{item.name}}'>
							<image class="cate-img" src="{{item2.picUrl ? item2.picUrl : '/public/img/no_pic.png'}}"></image>
							<view class='cate-type'>{{item2.name}}</view>
						</navigator>
					</view>
					<view wx:if="{{item.id != '7d7f14372fe498928742c85c6ddd424e' && item.children.length>0 }}" wx:for="{{item.children}}" wx:for-item="item2" wx:key class="cate">
						<navigator hover-class='none' url='/pages/goods/goods-list/index?categorySecond={{item2.id}}&title={{item2.name}}'>
							<image class="cate-img" src="{{item2.picUrl ? item2.picUrl : '/public/img/no_pic.png'}}"></image>
							<view class='cate-type'>{{item2.name}}</view>
						</navigator>
					</view>
					<view class='padding response text-center' wx:if="{{ !item.children }}">暂无数据</view>
				</view>
			</view>
		</view>
	</scroll-view>
</view>
